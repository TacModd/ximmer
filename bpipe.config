libs="/group/bioi1/shared/tools/ximmer/eval/pipeline/tools/groovy-ngs-utils/1.0.9/groovy-ngs-utils.jar"

executor="torque"
queue="batch"
mem_param="mem"
memory="16"
walltime="8:00:00"
proc_mode=1
account="bioinf"

R {
    executable="Rscript"
}

groovy {
    executable="./tools/groovy/2.5.13/bin/groovy"
}

python {
    executable="/group/bioi1/shared/tools/ximmer/eval/pipeline/tools/python/miniconda/bin/python"
}

modules="java/1.8.0_66 R/3.4.0"

install {
    title = "Ximmer"
    tools {
        bwa = "0.9.7"
        xhmm = "1.0"
        ExomeDepth = "0.2.2"
        conifer = "0.2.2"
        'cn.mops' {
            version="0.3.4"
        }
    }
}

commands {
    plot_cnv_coverage {
        // Enable to use multiple procs for plotting CNVs
        procs=1
    }
}
